{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.core",
      "es2015.promise"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "lib",
    "strictNullChecks": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*.ts",
    "./types/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}