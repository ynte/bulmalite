{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "outDir": "dist",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
        }
